{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "max-classes-per-file": [
            false
        ],
        "only-arrow-functions": [
            false
        ],
        "member-ordering": [
            false
        ],
        "member-access": [
            false
        ],
        "space-before-function-paran": false,
        "quotemark": [
            true,
            "single"
        ],
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": false,
        "prefer-for-of": false,
        "forin": false,
        "no-var-requires": false,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}
